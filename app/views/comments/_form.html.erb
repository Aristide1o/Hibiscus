  <% end %>
    
  <% if @post.isKata? %>
  <div class="field">
    <%= f.label :timeSpent, 'How much time did you spend on the activity?' %><br />
    <%= f.text_field :timeSpent, :size => "5" %> hours (for example, 3.5 hours)
  </div>
  <br/>
  <% end %>

  <% if @post.isKata?
      label = "kata"
      else
       label = "post"
     end %>

  <%# render :partial => '/comments/like_dislike', :locals => {:post => @post, :label => label} %>

  <div class="field">
    <%= f.label :content, 'Comment' %><br />
    <% if @post.isKata? %>
			<%= f.text_area :content, :size => "80x12", :value => "<strong>1. Why would you recommend (or not recommend) this activity to a peer?</strong><br /><br />
																															<strong>2. What worked well?</strong><br /><br />
																															<strong>3. What didn't work well?</strong><br /><br />
																															<strong>4. What programming language did you use?</strong><br /><br />
																															<strong>5. Where there any 'ah-hah!' moments or unintended consequences?</strong><br /><br />" %>
		<% else %>
			<%= f.text_area :content, :size => "80x10" %>
		<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
