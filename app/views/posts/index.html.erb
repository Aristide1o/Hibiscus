<% if @type == 'Kata' %>
    <% @posts.each do |post| %>
        <%= render :partial => 'posts/kata', :locals => {:kata => post} if post.kind_of? Kata %>
    <% end %>
<% else %>
    <%= link_to 'New Post', new_post_path %>

    <% @posts.each do |post| %>
        <%= render :partial => 'posts/post', :locals => {:post => post} unless post.kind_of? Kata %>
    <% end %>
    <br />
    <%= link_to 'New Post', new_post_path %>
<% end %>
