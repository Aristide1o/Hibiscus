<h1>All Posts</h1>

<section id="sidebar">
	<h3>Recent Posts:</h3>
	<% @posts.desc(:created_at).limit(5).each do |p| %>
		<p class="recentTitle"><%= link_to p.title, p %></p>
	<% end %>
</section>

<% @posts.each do |post| %>
	<section class="post">
		<h3 class="postTitle"><%= link_to post.title, post %></h3>
		<p class="postInfo">Posted on <%= post.created_at.to_formatted_s(:short) %> by <%= link_to post.user.name, post.user %>
    <p class="postContent"><%= post.content %></p>
    <section class="links">
			<%= link_to 'Edit', edit_post_path(post) %>
    	<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
		</section>
		<p class="postCommentsCount"><%= post.comments.count %> comments so far</p>
	</section>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
