<div class="newType" xmlns="http://www.w3.org/1999/html">
  <%= link_to "New #{@type}", new_polymorphic_path(@type.constantize) %>
</div>

<script>
    !function(d,s,id){
        var js,fjs=d.getElementsByTagName(s)[0];
        if(!d.getElementById(id)){
            js=d.createElement(s);
            js.id=id;
            js.src="//platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js,fjs);
        }
    }(document,"script","twitter-wjs");
</script>


<script type="text/javascript">
    (function() {
        var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
        po.src = 'https://apis.google.com/js/plusone.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
    })();
</script>

<div id="fb-root"></div>
<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=291979260915271";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="main-entities-div">
<%= render @post %>


<!-- social bar-->
<div class="entity-div">
  <div class="social_button_facebook">
    <div class="fb-like" data-send="true" data-layout="button_count" data-width="750" data-show-faces="false" data-font="arial"></div>
    </div>

  <div class="social_button_twitter">
        <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
    </div>
  <div class="social_button">
   <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
   <script type="IN/Share" data-counter="right"></script>
  </div>

  <div class="g-plus" data-action="share" data-annotation="bubble"></div>

</div>

  <!-- comments bar-->
<div class="entity-div">
  <% if @comments.any? %>
    <h2 id="commentsCount">
      <%= pluralize(@comments.count, @comment.class.to_s) %></h2>
    <%= render @comments %>
  <% end %>

  <% if @type != 'Kata' %>
    <p id="postLikesCount">
      <%= pluralize(@post.listLikes.count, "Like") %>
    </p>

    <p id="postDislikesCount">
      <%= pluralize(@post.listDislikes.count, "Dislike") %>
    </p>

    <%= form_for Like.new do |f| %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <p><%= f.submit "Like this post?" %></p>
    <% end %>
    <%= form_for Like.new, :html => {:id => "new_dislike"} do |f| %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.hidden_field :is_dislike, :value => true %>
      <p><%= f.submit "Dislike this post?" %></p>
    <% end %>

  <% end %>

  <br/>
  <% if current_user %>
    <h3>New <%= @comment.class.to_s %></h3>
    <%= render 'comments/form' %>
  <% else %>
    <h3>Please <%= link_to "sign in", '/auth/github' %> to comment.</h3>
  <% end %>
</div>
    </div>